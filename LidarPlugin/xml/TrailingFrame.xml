<ServerManagerConfiguration>
  <ProxyGroup name="filters">
    <SourceProxy name="TrailingFrame" class="vtkTrailingFrame" label="Trailing Frame">
      <Documentation
         short_help="Combine consecutive timestep in a multiblock."
         long_help="Combine consecutive timestep in a multiblock.">
      </Documentation>

      <InputProperty
         name="Input"
         port_index="0"
         command="SetInputConnection">
        <ProxyGroupDomain name="groups">
          <Group name="sources"/>
          <Group name="filters"/>
        </ProxyGroupDomain>
        <DataTypeDomain name="input_type">
          <DataType value="vtkPolyData"/>
        </DataTypeDomain>
        <Documentation>
          Set the input poly data
        </Documentation>
      </InputProperty>

      <IntVectorProperty
          name="NumberOfTrailingFrames"
          animateable="0"
          command="SetNumberOfTrailingFrames"
          default_values="0"
          number_of_elements="1">
        <Documentation>
          Set the number of trailing frame to display
        </Documentation>
      </IntVectorProperty>

      <IntVectorProperty
          name="UseCache"
          animateable="0"
          command="SetUseCache"
          default_values="1"
          number_of_elements="1"
          panel_visibility="advanced">
        <BooleanDomain name="bool" />
        <Documentation>
          Use an internal cache for speed up. If a cache is used, some artefact may appear if
          the input for previous timestep change. This option has no effect on live source.
        </Documentation>
      </IntVectorProperty>

   </SourceProxy>
  </ProxyGroup>
</ServerManagerConfiguration>
